<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head> 
<body>
  <div class="container">
    <%= render 'layouts/header' %>
	  <div class="content">
	    <%= render 'layouts/navigation' %>	
	    <section>
		  <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>
	      <%= yield %>
	    </section>
	    <%= render 'layouts/news' %>
	    </div>
	  <%= render 'layouts/footer' %>
  </div> 
</body>
</html>
